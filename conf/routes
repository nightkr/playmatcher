# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET        /                            controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file                controllers.Assets.at(path="/public", file)

GET        /match                       controllers.Application.connect
GET        /connect                     controllers.Application.connectWS

GET        /login/steam                 controllers.SteamAuthentication.steamLogin(returnTo: Option[String] ?= None)
GET        /login/steam/callback        controllers.SteamAuthentication.steamCallback(returnTo)
